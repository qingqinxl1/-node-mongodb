extends ../layout
block content
  .container
    .row
      each movie in movies
        .col-md-2
          .thumbnail
            a(href="/movie/detail/#{movie._id}")
              img(src="#{movie.poster}", alt="#{movie.title}")
            .caption
              h3 #{movie.title}
              p: a.btn.btn-primary(href="/movie/detail/#{movie._id}", role="button") 观看预告片